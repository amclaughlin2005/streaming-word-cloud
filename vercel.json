{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "public/**",
          "data/**",
          "generate_wordcloud.py",
          "requirements.txt"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "env": {
    "CSV_FILE_PATH": "data/demo_feedback.csv",
    "POLLING_INTERVAL": "20000",
    "NODE_ENV": "production"
  }
}